---
interface Props {
    title: string;
    description: string;
    link?: string;
    date: string;
}
const { date, title, description, link} = Astro.props;
import AccessPill from './AccessPill.astro';
---

<div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-purple-600"
>
</div>
<time
    class="mb-1 ml-2 text-sm font-normal leading-none text-gray-400 dark:text-purple-300 opacity-90"
    >{date}</time
>
<h3 class="text-lg font-semibold text-gray-900 dark:text-white mt-3 ml-2">
    {title}
</h3>
<p class="mb-4 ml-2 text-base font-normal text-gray-500 dark:text-gray-400">
    {description}
</p>
{
    link && (
        
        <a
            href={link}
            class="inline-flex items-center px-4 py-2 ml-2 text-sm font-medium  border rounded-full border-white/10 text-white/80  bg-white/5 hover:scale-105 hover:bg-white/10  focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-white transition"
        >
            Saber m√°s...
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
        </a>
    )
}
